@model List<ConceptosPago>
@{
    ViewData["Title"] = "ConceptosPago";
}

<div class="container">
    <div class="d-flex justify-content-between mb-3">
        <h2>Conceptos Pagos</h2>


        <div>
            <a id="add" class="btn btn-primary" asp-controller="ConceptosPago" asp-action="Add">Agregar</a>
            <a id="searchButton" class="btn btn-primary" asp-controller="ConceptosPago" asp-action="Search" onclick="editSearch()">Buscar</a>
            <input name="parametro" type="text" class="form-control" id="parametro">
        </div>




    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                @*<th scope="col">ID</th>*@
                <th scope="col">Descripcion</th>
                <th scope="col">Estado</th>
                <th scope="col">Acciones</th>
                
            </tr>
        </thead>
        <tbody>
            @foreach (var element in Model)
            {
                <tr>
                    @*<td>@Html.DisplayFor(m => element.Id)</td>*@
                    <td>@Html.DisplayFor(m => element.Descripcion)</td>
                    
                    <td>

                        @if (element.Estado)
                        {
                            <span>Activo</span>
                        }
                        else
                        {
                            <span>Inactivo</span>
                        }
                    </td>
                    <td>
                        <a class="btn btn-success" id="edit" asp-controller="ConceptosPago" asp-action="EditView" asp-route-id="@element.Id">Editar</a>
                        <a class="btn btn-danger" id="delete" asp-controller="ConceptosPago" asp-action="Delete" asp-route-id="@element.Id">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    
    <script>
        function editSearch() {
            let value = document.getElementById("parametro").value;
            document.getElementById("searchButton").href = "/ConceptosPago/" + value;
        }
    </script>
</div>
